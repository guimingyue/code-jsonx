{
  "name": "code-jsonx",
  "displayName": "CodeJsonX",
  "description": "A VS Code extension for formatting, compacting, escaping and unescaping JSON text",
  "version": "0.0.1",
  "publisher": "guimingyue",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/guimingyue/code-jsonx.git"
  },
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-jsonx.formatJson",
        "title": "Format JSON"
      },
      {
        "command": "code-jsonx.compactJson",
        "title": "Compact JSON"
      },
      {
        "command": "code-jsonx.escapeJson",
        "title": "Escape JSON Text"
      },
      {
        "command": "code-jsonx.unescapeJson",
        "title": "Unescape JSON Text"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "code-jsonx.commands",
          "when": "resourceLangId == json || resourceLangId == jsonc",
          "group": "navigation"
        }
      ],
      "code-jsonx.commands": [
        {
          "command": "code-jsonx.formatJson",
          "when": "resourceLangId == json || resourceLangId == jsonc",
          "group": "code-jsonx@1"
        },
        {
          "command": "code-jsonx.compactJson",
          "when": "resourceLangId == json || resourceLangId == jsonc",
          "group": "code-jsonx@2"
        },
        {
          "command": "code-jsonx.escapeJson",
          "when": "resourceLangId == json || resourceLangId == jsonc",
          "group": "code-jsonx@3"
        },
        {
          "command": "code-jsonx.unescapeJson",
          "when": "resourceLangId == json || resourceLangId == jsonc",
          "group": "code-jsonx@4"
        }
      ],
      "editor/title": [
        {
          "submenu": "code-jsonx.commands",
          "when": "resourceLangId == json || resourceLangId == jsonc"
        }
      ]
    },
    "submenus": [
      {
        "id": "code-jsonx.commands",
        "label": "CodeJsonX"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "npx @vscode/test-cli",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.1",
    "canvas": "^3.2.0",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  }
}
